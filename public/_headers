# Netlify Headers

# Bot-accessible plain-text files (LLM crawlers, AI agents, search bots)
/llms.txt
  Content-Type: text/plain; charset=utf-8
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600, must-revalidate

/llm-full.txt
  Content-Type: text/plain; charset=utf-8
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600, must-revalidate

/robots.txt
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=3600, must-revalidate

/sitemap.xml
  Content-Type: application/xml; charset=utf-8
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600, must-revalidate

# Immutable caching for hashed JS/CSS bundles (filenames change every build)
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

/assets/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Short-lived cache for image assets (filenames stay the same across deploys)
/assets/*.webp
  Cache-Control: public, max-age=3600, must-revalidate

/assets/*.png
  Cache-Control: public, max-age=3600, must-revalidate

/assets/*.svg
  Cache-Control: public, max-age=3600, must-revalidate

# Cache control for the service worker - never cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Cache control for the manifest - short cache
/manifest.webmanifest
  Cache-Control: public, max-age=0, must-revalidate

# Default for HTML files - ensure fresh content
/*.html
  Cache-Control: public, max-age=0, must-revalidate
